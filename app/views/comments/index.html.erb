<h1>Listing comments</h1>

<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td>
    <td><%= comment.user_id %></td>
    <td><%= link_to 'Show', [comment.user, comment] %></td>
    <td><%= link_to 'Reply', user_comment_replies_path(@user, comment) %></td>
    <td><%= link_to 'Edit', edit_user_comment_path(comment.user, comment) %></td>
    <td><%= link_to 'Destroy', [comment.user, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_user_comment_path(params[:user_id]) %>
